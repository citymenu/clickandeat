                                    #end
                                    #foreach( $discount in $order.orderDiscounts )
                                        #if( $discount.discountType == 'DISCOUNT_FREE_ITEM' && $stringTool.hasText($discount.freeItem) )
                                        <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal;">$stringTool.escape($discount.freeItem)</div>
                                        #end
                                    #end
                                </div>

                                #if( $order.deliveryCost > 0 )
                                <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal;"><b>$stringTool.getMessage("vm-delivery-cost"): &#163;$numberTool.format("#0.00", $order.deliveryCost)</b></div>
                                #end

                            </div>
                        </div>

                        #if( $order.hasCashDiscount() )
                        <div style="margin-bottom:15px;">
                            <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal; margin-bottom:5px;"><b>Descuentos aplicados al pedido:</div>
                                #foreach( $discount in $order.orderDiscounts )
                                    #if( $discount.discountType != 'DISCOUNT_FREE_ITEM' )
                                    <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal;">$stringTool.escape($discount.title): -&#163;$numberTool.format("#0.00", $discount.discountAmount)</div>
                                    #end
                                #end
                            </div>
                        </div>
                        #end

                        <div style="margin-bottom:15px;">
                            <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal; margin-bottom:5px;"><b>$stringTool.getMessage("vm-total-price"): &#163;$numberTool.format("#0.00", $order.restaurantCost)</b></div>
                        </div>

                        <div style="margin-bottom:15px;">
                            <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal;"><b>Cliente:</b> $stringTool.escape($order.customer.firstName) $stringTool.escape($order.customer.lastName)</div>
                            <div style="font:12px/14px tahoma,verdana,arial,sans-serif; font-weight:normal;"><b>Teléfono:</b> ${order.customer.telephone}</div>
                        </div>
                    </td>
                    <td width="20">&nbsp;</td>
                    <td width="230">
                        <img src="http://clickandeat.s3-external-3.amazonaws.com/resources/images/email/order-confirmation.jpg" width="230" height="300"/>
                    </td>
                </tr>
                <tr valign="top">
                    <td width=550" colspan="3">
