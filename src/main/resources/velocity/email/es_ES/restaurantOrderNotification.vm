<html>

<head>
</head>

<body>

<h1>Tienes un nuevo pedido de LlamarYComer</h1>

<h2>Numero del pedido: ${order.orderId}</h2>

#if($order.deliveryType == 'DELIVERY')
    <div>El pedido es para entregar
    #if($order.expectedDeliveryTime)
        a las $stringTool.formatDate($order.expectedDeliveryTime)
        #if(!($order.expectedDeliveryTime.toLocalDate() == $today))
            el $order.expectedDeliveryTime.dayOfWeek().getAsText($locale)
        #end
    #else
        cuanto antes.
    #end
    </div>
#else
    <div>El pedido es para recoger
    #if($order.expectedCollectionTime)
        a las $stringTool.formatDate($order.expectedCollectionTime)
        #if(!($order.expectedCollectionTime.toLocalDate() == $today))
            el $order.expectedCollectionTime.dayOfWeek().getAsText($locale)
        #end
    #else
        cuanto antes.
    #end
    </div>
#end

<h3>Datos del pedido</h3>

#foreach( $item in $order.orderItems )
    #if( $item.menuItemNumber && $item.menuItemNumber != 0 )
        <div>
            $item.quantity x ($item.menuItemNumber) $stringTool.escape($item.menuItemTitle)
            #if( $stringTool.hasText($item.menuItemTypeName ))
                ($stringTool.escape($item.menuItemTypeName))
            #end
            #if( $stringTool.hasText($item.menuItemSubTypeName ))
                ($stringTool.escape($item.menuItemSubTypeName))
            #end
        </div>
    #else
        <div>
            $item.quantity x $stringTool.escape($item.menuItemTitle)
            #if( $stringTool.hasText($item.menuItemTypeName ))
                ($stringTool.escape($item.menuItemTypeName))
            #end
            #if( $stringTool.hasText($item.menuItemSubTypeName ))
                ($stringTool.escape($item.menuItemSubTypeName))
            #end
        </div>
    #end
    #if( $item.additionalItems.size() > 0 )
        #foreach( $additionalItem in $item.additionalItems )
            <div>- $stringTool.escape($additionalItem)</div>
        #end
    #end
#end

#foreach( $discount in $order.orderDiscounts )
    #if( $discount.discountType == 'DISCOUNT_FREE_ITEM' && $stringTool.hasText($discount.selectedFreeItem ))
        <div>1 x $stringTool.escape($discount.selectedFreeItem) (free)</div>
    #end
#end

#if( $stringTool.hasText($order.additionalInstructions))
    <h3>Instrucciones adicionales</h3>
    <div>$stringTool.escape($order.additionalInstructions,true)</div>
#end

#if( $order.hasCashDiscount() )
    <h3>Descuentos aplicados al pedido</h3>
#end

#foreach( $discount in $order.orderDiscounts )
    #if( $discount.discountType != 'DISCOUNT_FREE_ITEM' )
        <div>$stringTool.escape($discount.title): -&#163;$numberTool.format("#0.00", $discount.discountAmount)</div>
    #end
#end

<h3>Coste del plato: &#163;$numberTool.format("#0.00", $order.orderItemCost)</h3>

#if( $order.totalDiscount > 0 )
    <h3>Total descuentos: &#163;$numberTool.format("#0.00", $order.totalDiscount)</h3>
#end

#if( $order.deliveryCost > 0 )
    <h3>Costes de envio: &#163;$numberTool.format("#0.00", $order.deliveryCost)</h3>
#end

<h3>Coste total: &#163;$numberTool.format("#0.00", $order.totalCost)</h3>

<div>
    <a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptCurl">Accept</a>
    <a href="${baseUrl}/workflow/confirmOrder.html?curl=$declineCurl">Decline</a>
</div>

#if($order.deliveryType == 'DELIVERY')
    <div>Tu tiempo de entrega estándar es: $order.restaurant.deliveryTimeMinutes minutos</div>
    <div>Haz clic abajo para añadir tiempo al tiempo de entrega estándar para este pedido</div>
#else
    <div>Tu tiempo de recogida es: $order.restaurant.collectionTimeMinutes minutos</div>
    <div>Haz clic abajo para añadir tiempo al tiempo de recogida estándar para este pedido</div>
#end

<div>
<div><a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptWithDeliveryCurl&minutes=15">15 minutos mas</a></div>
<div><a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptWithDeliveryCurl&minutes=30">30 minutos mas</a></div>
<div><a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptWithDeliveryCurl&minutes=45">45 minutos mas</a></div>
<div><a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptWithDeliveryCurl&minutes=60">60 minutos mas</a></div>
<div><a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptWithDeliveryCurl&minutes=90">90 minutos mas</a></div>
<div><a href="${baseUrl}/workflow/confirmOrder.html?curl=$acceptWithDeliveryCurl&minutes=120">120 minutos mas</a></div>
</div>

</body>

